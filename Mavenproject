pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/username/repo.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                sh 'scp target/app.war user@server-ip:/opt/tomcat/webapps/'
            }
        }
    }
}
